				<!-- 军团战报名排行榜 -->
				<军团战报名>
					<maxLen>100000000</maxLen><!-- 排行榜最大长度 -->
					<showLen>20</showLen><!-- 排行榜UI显示长度 -->
				</军团战报名>
				<!-- 军团战力排行榜 -->
				<军团战力>
					<maxLen>100000000</maxLen><!-- 排行榜最大长度 -->
					<showLen>30</showLen><!-- 排行榜UI显示长度 -->
				</军团战力>
			</RankType>
		</gang>
		<tempPVP>
			<RankType>
				<!-- 天梯系统排行榜 -->
				<青铜>
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
					<showLen>20</showLen><!-- 排行榜UI显示长度 -->
				</青铜>
				<白银>
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
					<showLen>20</showLen><!-- 排行榜UI显示长度 -->
				</白银>
				<黄金>
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
					<showLen>20</showLen><!-- 排行榜UI显示长度 -->
				</黄金>
				<白金>
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
					<showLen>20</showLen><!-- 排行榜UI显示长度 -->
				</白金>
				<钻石>
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
					<showLen>20</showLen><!-- 排行榜UI显示长度 -->
				</钻石>
				<最强王者>
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
					<showLen>10</showLen><!-- 排行榜UI显示长度 -->
				</最强王者>
			</RankType>
		</tempPVP>
	</logicConfig>

	<excelConfig>
		<good>
			<path>./res/gamedata/rankModule/rankGood.xls</path>
			<HeaderIndex>5</HeaderIndex>
		</good>
	</excelConfig>

</chatmoduleconfig>