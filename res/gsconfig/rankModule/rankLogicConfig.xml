<?xml version="1.0" encoding="UTF-8"?>

<chatmoduleconfig>

	<logicConfig>
		<!-- 排行榜排名变化通知时间任务，延时多久执行，DHMS格式 -->
		<RankChangeTaskDelayTime>5S</RankChangeTaskDelayTime>
		<!-- 排行榜重排周期，DHMS格式 -->
		<RankResortPeriod>30S</RankResortPeriod>

		<role>
			<RankType>
				<战力榜>
					<minJoinLv>15</minJoinLv><!-- 最小入围角色等级 -->
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
				</战力榜>
				<等级榜>
					<minJoinLv>15</minJoinLv><!-- 最小入围角色等级 -->
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
				</等级榜>
				<竞技榜>
					<minJoinLv>15</minJoinLv><!-- 最小入围角色等级 -->
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
				</竞技榜>
				<随从榜>
					<minJoinLv>15</minJoinLv><!-- 最小入围角色等级 -->
					<maxLen>2000</maxLen><!-- 排行榜最大长度 -->
				</随从榜>
			</RankType>
		</role>
		<gang>
			<RankType>
				<!-- 军团列表排行榜 -->
				<全部军团>
					<maxLen>100000000</maxLen><!-- 排行榜最大长度 -->
					<showLen>20</showLen><!-- 排行榜UI显示长度 -->
				</全部军团>
				<!-- 军团战积分排行榜 -->
